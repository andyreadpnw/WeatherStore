<div id="productBox">
<ul id="productsForm">
<% @products.each do |product| %>
  <%= image_tag product.image_name %><br>
    <p><%= product.name %> | <%= number_to_currency product.price %><br>
   Weather Type: <%= product.weather_type %><br>
    <%= form_for @order_item do |f| %>
      <%= f.hidden_field :product_id, value: product.id %>
      Enter Quantity:<%= f.number_field :quantity %>
      </ul>
      <%= f.submit "Add to cart" %>
    <% end %></p>
  <% end %>
  </div>

  <ul id="cartForm">
  <%= link_to "Cart", cart_path%>
  </ul>
